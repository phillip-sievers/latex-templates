\ProvidesPackage{beamercolorthemefub}
\mode<presentation>

% Official FU colors (Corporate Design)
\definecolor{fu_black}{HTML}{000000}
\definecolor{fu_green}{HTML}{CCFF00}
\definecolor{fu_blue}{HTML}{004659}
\definecolor{fu_skyblue}{HTML}{00A4D1}
\definecolor{fu_orange}{HTML}{E57050}
\definecolor{fu_burgundy}{HTML}{813353}
\definecolor{fu_grey}{gray}{0.6}
\definecolor{fu_lightgrey}{gray}{0.9}

% Beamer element colors
\setbeamercolor*{title}{fg=fu_black}
\setbeamercolor*{frametitle}{fg=fu_blue}
\setbeamercolor*{subtitle}{fg=fu_skyblue}
\setbeamercolor*{normal text}{fg=fu_black}
\setbeamercolor*{alerted text}{fg=fu_orange}
\setbeamercolor*{example text}{fg=fu_green}
\setbeamercolor*{structure}{fg=fu_blue}

% Blocks
\setbeamercolor*{block title}{fg=white, bg=fu_blue}
\setbeamercolor*{block body}{bg=fu_lightgrey}
\setbeamercolor*{block title alerted}{fg=white, bg=fu_orange}
\setbeamercolor*{block body alerted}{bg=fu_lightgrey}
\setbeamercolor*{block title example}{fg=white, bg=fu_green}
\setbeamercolor*{block body example}{bg=fu_lightgrey}

% Other UI
\setbeamercolor*{item}{fg=fu_blue}
\setbeamercolor*{navigation symbols}{fg=fu_grey}
\setbeamercolor*{footline}{fg=fu_black, bg=fu_lightgrey}
\setbeamercolor*{headline}{fg=fu_black, bg=white}
\setbeamercolor*{bibliography entry author}{fg=fu_blue}

\mode<all>
